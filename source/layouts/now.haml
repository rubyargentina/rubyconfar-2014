!!!
- lang = yield(:lang)||'en'
%html{lang: lang}
  %head
    %title #{yield(:title)} RubyConf Argentina 2014
    %meta{:charset => "UTF-8"}
    %meta{:content => "IE=edge", "http-equiv" => "X-UA-Compatible"}
    %meta{:content => "width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0", :name => "viewport"}
    %link{:href => "http://fonts.googleapis.com/css?family=Open+Sans:300,300italic,400,400italic,600,600italic,700,700italic", :rel => "stylesheet", :type => "text/css"}

    %link{:charset => "utf-8", :href => "stylesheets/now.css", :media => "screen", :rel => "stylesheet", :type => "text/css"}
    %script{:src => "javascripts/html5shiv.js"}    
    %script{:src => "javascripts/jquery.1.11.min.js"}
    %script{:src => "javascripts/jquery.easing.1.3.js"}
    %script{:src => "javascripts/jquery.bxslider.min.js"}
    %script{:src => "javascripts/twitterFetcher_min.js"}
    %script{:src => "javascripts/jquery.fittext.js"}
    %script{:src => "javascripts/now.js"}
    = yield(:head)
  %body{id: yield(:body_id), class: yield(:body_class)}
    = yield
